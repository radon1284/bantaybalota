<%- model_class = Report -%>
<div class="page-header">
  <h1><%=t '.title', :default => Report %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:precinct_number) %></th>
      <th><%= model_class.human_attribute_name(:ballot_number) %></th>
      <th><%= model_class.human_attribute_name(:vote_receipt_number) %></th>
      <th><%= model_class.human_attribute_name(:bei_name) %></th>
      <th><%= model_class.human_attribute_name(:voted_president) %></th>
      <th><%= model_class.human_attribute_name(:pcos_result_president) %></th>
      <th><%= model_class.human_attribute_name(:voted_vice_president) %></th>
      <th><%= model_class.human_attribute_name(:pcos_result_vice_president) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.precinct_number %></td>
        <td><%= report.ballot_number %></td>
        <td><%= report.vote_receipt_number %></td>
        <td><%= report.bei_name %></td>
        <td><%= report.voted_president %></td>
        <td><%= report.pcos_result_president %></td>
        <td><%= report.voted_vice_president %></td>
        <td><%= report.pcos_result_vice_president %></td>
        <td>
          <%= link_to report_path(report), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to report_path(report), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_report_path,
            :class => 'btn btn-primary' %>
